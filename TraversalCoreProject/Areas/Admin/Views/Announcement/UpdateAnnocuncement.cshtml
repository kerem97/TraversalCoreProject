@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnocuncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="AnnouncementID" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Duyuru</label>
    <input type="text" asp-for="Content" class="form-control" />
    <span asp-validation-for="Content" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

