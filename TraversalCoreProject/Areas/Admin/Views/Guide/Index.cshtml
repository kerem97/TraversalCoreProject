@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Tur Rehberlerimiz</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@x.Image" style="width: 50px; height: 50px; border: 2px solid red; border-radius: 25px;" /></td>
            <td>@x.Name</td>
            <td>@x.Description</td>

            @if (x.Status == true)
            {
                <td><a href="/Admin/Guide/ChangeStatusToFalse/@x.GuideID" class="btn btn-outline-warning">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="/Admin/Guide/ChangeStatusToTrue/@x.GuideID" class="btn btn-outline-primary">Aktif Yap</a></td>
            }

            <td><a href="/Admin/Guide/EditGuide/@x.GuideID" class="btn btn-outline-secondary">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-dark">Yeni Rehber Girişi</a>

