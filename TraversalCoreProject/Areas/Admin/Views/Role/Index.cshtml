@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rol Listesi</h1>
<br />
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var x in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@x.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@x.Id" class="btn btn-outline-danger">Rolü Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@x.Id" class="btn btn-outline-primary">Rolü Güncelle</a></td>
            </tr>
        }



    </table>
}

else
{
    <div class="alert alert-success">
        <span>Rol Bulunamadı</span>
    </div>
}
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-info">Rol Ekle</a>