@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rota Bilgileri Düzenleme Sayfası</h1>

<br />
<form method="post">
    @Html.HiddenFor(x => x.DestinationID)
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="ImageUrl2" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Detay1")
        <textarea cols="30" rows="5" asp-for="Details1" class="form-control"></textarea>
    </div>
    <div class="form-group">
        @Html.Label("Detay1")
        <textarea cols="30" rows="5" asp-for="Details2" class="form-control"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-dark">Güncelle</button>
</form>

